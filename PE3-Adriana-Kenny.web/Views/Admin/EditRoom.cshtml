@model AdminEditRoomsVM

@{
    Layout = "_AdminLayout";
}

<form asp-action="EditRoom" method="post">
    <input asp-for="Room.Id" type="hidden" />;

    <div class="form-group">
        <input asp-for="Room.HotelId" type="hidden" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="Room.RoomTypeId"></label>
        <input asp-for="Room.RoomTypeId" value="@Model.Room.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Room.Description"></label>
        <input asp-for="Room.Description" value="@Model.Room.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Room.PriceNight"></label>
        <input asp-for="Room.PriceNight" value="@Model.Room.PriceNight" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Wijzig kamer" class="btn btn-primary" />
    </div>
</form>
