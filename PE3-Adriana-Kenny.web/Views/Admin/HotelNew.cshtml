@model AdminIndexVM

@{
    Layout = "_AdminLayout";
}

@{
    ViewData["Title"] = "HotelNew";
}

<form id="bookColForm" asp-action="HotelNew" enctype="multipart/form-data" method="post">

    <input asp-for="Id" type="hidden" />


    <div class="form-group">

        <select asp-for="CityId">
            @foreach (var city in Model.CityList)
            {
                <option value="@city.Id">@city.Name</option>
            }

        </select>

    </div>

    <div class="form-group">
        <label asp-for="Name">Naam</label>
        <input asp-for="Name" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="Stars">Aantal sterren</label>
        <input asp-for="Stars" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="Address">Adres</label>
        <input asp-for="Address" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="NmbrOfRooms">Aantal kamers</label>
        <input asp-for="NmbrOfRooms" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="Description">Omschrijving</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>


    <div class="form-group">
        <label asp-for="Facilities">Faciliteiten</label>
        <textarea asp-for="Facilities" class="form-control"></textarea>
    </div>

    <label asp-for="ImageToUpload">Kies een afbeelding</label>
    <input type="file" asp-for="ImageToUpload" />
    <p>
        <span asp-validation-for="ImageToUpload" class="text-danger"></span>
    </p>



    <button type="submit" value="Opslaan" name="submitButton" class="btn btn-secondary">Opslaan</button>

</form>