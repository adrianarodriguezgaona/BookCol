@model AdminIndexVM

@{
    Layout = "_AdminLayout";
}

<h1>Voeg Kamers toe</h1>

<h4>Kamers in het @Model.Hotel.Name</h4>

<table class="tabel">

    <tr>
        <th>KamerTypeID</th>
        <th>Kameromschrijving</th>
        <th>Prijs per Nacht</th>

    </tr>
    @foreach (var room in Model.Rooms)
    {

        <tr>
            <td>@room.RoomTypeId</td>
            <td width="800px">@room.Description</td>
            <td>@room.PriceNight</td>
            <td><a asp-action="EditRoom" asp-route-id="@room.Id">Wijzig</a></td>


            <td><a href="/Admin/DeleteR/@room.Id">Verwijder</a></td>

        </tr>
    }

</table>

<form asp-action="AddRooms" method="get">
    <button value="@Model.Hotel.Id" name="hotelid" class="btn btn-primary">Voeg kamer toe</button>
</form>