@model Hotel

@{
    Layout = "_AdminLayout";
}

<form id="EditRemove" asp-controller="Admin" asp-action="HotelEdit">


    <input asp-for="Id" type="hidden" />
    <input asp-for="CityId" type="hidden" />
    <input asp-for="Photo" type="hidden" />

    <div class="form-group">
        <label asp-for="Name">Naam</label>
        <input asp-for="Name" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="Stars">Aantal sterren</label>
        <input asp-for="Stars" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="Address">Adres</label>
        <input asp-for="Address" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="NmbrOfRooms">Aantal kamers</label>
        <input asp-for="NmbrOfRooms" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="Description">Omschrijving</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>


    <div class="form-group">
        <label asp-for="Facilities">Faciliteiten</label>
        <textarea asp-for="Facilities" class="form-control"></textarea>
    </div>

    <button type="submit" value="Wijzigen" name="submitButton" class="btn btn-secondary">Toevoegen</button>
</form>