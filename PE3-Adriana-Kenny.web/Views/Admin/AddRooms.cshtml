@model AdminEditRoomsVM

@{
    Layout = "_AdminLayout";
}

@{
    ViewData["Title"] = "EditRooms";
}

<h1>EditRooms</h1>

<h4>Room</h4>
<hr />

<form id="bookColForm" asp-action="AddRooms" method="post">



    <div class="form-group">
        <input asp-for="HotelId" type="hidden" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoomTypeId">Kamer type id</label>

        <select asp-for="RoomTypeId">
            @foreach (var type in @Model.Roomtypes)
            {
                <option value="@type.Id" class="form-control" />@type.Type

            }

        </select>
    </div>
    <div class="form-group">
        <label asp-for="Description">Beschrijving</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PriceNight">Prijs per nachtw²</label>
        <input asp-for="PriceNight" class="form-control" />
        <span asp-validation-for="PriceNight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Voeg kamer toe" class="btn btn-primary" />
    </div>
</form>
